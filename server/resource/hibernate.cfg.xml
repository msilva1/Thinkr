        <property name="connection.password">Azure2016</property>

        <!--<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>-->
        <property name="default_schema">thinkr</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping package="com.bytes.thinkr.model"/>
        <mapping class="com.bytes.thinkr.model.Test"/>

        <mapping package="com.bytes.thinkr.model.account"/>
        <mapping class="com.bytes.thinkr.model.account.Account"/>
        <mapping class="com.bytes.thinkr.model.account.User"/>

        <mapping package="com.bytes.thinkr.model.assignment"/>
        <mapping class="com.bytes.thinkr.model.assignment.Assignment"/>
        <mapping class="com.bytes.thinkr.model.assignment.Question"/>
        <mapping class="com.bytes.thinkr.model.assignment.Answer"/>
        <mapping class="com.bytes.thinkr.model.assignment.Point"/>
        <mapping class="com.bytes.thinkr.model.assignment.Score"/>

        <mapping package="com.bytes.thinkr.model.session"/>
        <mapping class="com.bytes.thinkr.model.session.Session"/>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>