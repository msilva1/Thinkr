        <!-- Kent's Local Connection -->
        <property name="connection.url">
            jdbc:sqlserver://bytes.database.windows.net:1433;database=ThinkrDB;user=kentative@bytes;password=Azure2016;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;
        </property>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
